<% if @tweet.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
  <% @tweet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<h1>つぶやく</h1>

<%= form_with model: @tweet do |f| %>
  <p><%= f.label :message, 'つぶやき：' %></p>
  <p><%= f.text_area :message %></p>
  <%= f.submit '送信' %>
<% end %>

<%= link_to '戻る', root_path %>